<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/popupLayoutView"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="900dip"
  android:layout_height="800dip"
  android:layout_margin="40dip"
  android:background="@color/parchment"
  >
    <!-- <ImageView android:layout_alignParentLeft="true"
        android:src="@drawable/frame" 
        android:layout_height="fill_parent" 
        android:layout_width="fill_parent" 
        android:id="@+id/imageView1" 
        android:scaleType="fitXY"
    ></ImageView>
    -->
    
    <ListView android:id="@+id/queryResults"
      android:layout_width="400dip"
      android:layout_height="200dip"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:background="@color/darkRed"
    ></ListView>
    
    <Button android:id="@+id/getSourceListButton"
      android:text="Get Sources" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:background="@color/skyBlue"
      android:textSize = "30dip"
      android:textColor="@color/black"
	  android:layout_above="@id/queryResults"
      android:layout_centerHorizontal="true"
      android:padding="5dip"
    ></Button>
    
    <Button android:id="@+id/resetDatabaseButton" 
      android:text="Reset DB (this will restore DB)" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:background="@color/skyBlue"
      android:textSize = "30dip"
      android:textColor="@color/black"
	  android:layout_below="@id/queryResults"
      android:layout_centerHorizontal="true"
      android:padding="5dip"
   ></Button>    
   <Button android:id="@+id/databaseInputDoneButton" 
      android:text="I'm done" 
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content"
      android:background="@color/lightGrey"
      android:textSize = "30dip"
      android:textColor="@color/black"
      android:layout_gravity="center"
      android:layout_below="@id/resetDatabaseButton"
      android:layout_centerHorizontal="true"
      android:padding="10dip"
   ></Button>

 <RelativeLayout android:id="@+id/returnLayout"
    android:layout_centerHorizontal="true"
    android:padding="4dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/getSourceListButton"
    >
    <TextView android:id="@+id/returnedView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="30dip"
       android:text="  The Source is named: "
       android:textColor="@color/black"
       android:background="@color/parchment"
       android:layout_alignParentLeft="true"
    ></TextView>
    <TextView android:id="@+id/sourceNameReturned"
       android:text="not yet" 
       android:textColor="@color/black"
       android:layout_width="200dip"
       android:layout_height="wrap_content"
       android:textSize="30dip"
       android:background="@color/parchment"
       android:layout_alignTop="@id/returnedView"
       android:layout_toRightOf="@id/returnedView"
    ></TextView> 
</RelativeLayout> 
 <RelativeLayout android:id="@+id/getSourceLayout"
    android:layout_centerHorizontal="true"
    android:padding="4dip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@id/returnLayout"
    >
    <Button android:id="@+id/getSourceButton" 
       android:layout_height="wrap_content" 
       android:layout_width="wrap_content"
       android:background="@color/green"
       android:textColor="@color/black"
       android:text="get Source"
       android:textSize="30dip"
    ></Button>
    <TextView android:id="@+id/keyPrompt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="30dip"
       android:text="  Enter Requested Key Here->"
       android:layout_toRightOf="@id/getSourceButton"
       android:layout_alignTop="@id/getSourceButton"
       android:textColor="@color/black"
    ></TextView>
    <EditText android:id="@+id/requestedSourceKey" 
       android:layout_width="60dip"
       android:layout_margin="3dip" 
       android:layout_height="wrap_content"
       android:background="@color/lightBlue"
       android:textColor="@color/black"
       android:textSize="30dip"
       android:layout_toRightOf="@id/keyPrompt"
       android:layout_alignTop="@id/getSourceButton"
    ></EditText>
</RelativeLayout>   

 <RelativeLayout android:id="@+id/addSourceLayout"
    android:layout_centerHorizontal="true"
    android:padding="4dip"
    android:layout_width="wrap_content"
    android:layout_height="30dip"
    android:layout_above="@id/getSourceLayout"
    >  
   <Button android:id="@+id/addSourceButton" 
       android:layout_height="fill_parent" 
       android:layout_width="wrap_content"
       android:background="@color/green"
       android:textColor="@color/black"
       android:text="Add Source"
       android:textSize="20dip"
       android:layout_alignParentTop="true"
    ></Button>
    <EditText android:id="@+id/newSourceText" 
       android:layout_width="100dip" 
       android:layout_centerVertical="true"
       android:layout_height="fill_parent"
       android:background="@color/lightBlue"
       android:textColor="@color/black"
       android:textSize="20dip"
       android:layout_toRightOf="@id/addSourceButton"
    ><requestFocus></requestFocus></EditText>
</RelativeLayout>   

    
</RelativeLayout>
