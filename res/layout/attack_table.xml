<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/attackViews" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    android:background="@color/lightBlue"
>
    <RelativeLayout android:id="@+id/attackView1" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        >
        <TextView android:layout_width="wrap_content" 
           android:text="this is the attack table" 
           android:textColor="@color/black" 
		   android:textSize="16dip" 
           android:layout_height="wrap_content" 
           android:id="@+id/textView1" 
        ></TextView>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/relativeLayout2" 
       android:layout_width="wrap_content" 
       android:layout_height="wrap_content" 
    >
       <TextView 
          android:layout_width="wrap_content" 
          android:layout_height="wrap_content" 
          android:id="@+id/attackView2" 
          android:text="+8/+3 | 1d8+6 | 18-20/x2"
          android:textSize="16dip"
          android:textColor="@color/black" 
          android:layout_alignParentLeft="true"
       ></TextView>
    </RelativeLayout>
</LinearLayout>
